{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": [
      "error",
      "^0.6.0"
    ],
    "not-rely-on-time": "off",
    "var-name-mixedcase": "off",
    "func-name-mixedcase": "off",
    "contract-name-camelcase": "off",
    "const-name-snakecase": "off",
    "event-name-camelcase": "warn",
    "reason-string": "off",
    "no-empty-blocks": "off",
    "max-states-count": "off"
  }
}
